{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/app",
    "module": "ES2022",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "types": [
      "node"
    ]
  },
  "files": [
    "src/main.server.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/test.ts",
    "src/polyfills.ts"
  ]
}
